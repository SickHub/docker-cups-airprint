{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["regex", "dockerfile"],
  "regexManagers": [
    {
      "fileMatch": [
        "^.circleci/config.yml$"
      ],
      "matchStrings": [
        "\\sdefault: (?<currentValue>.*?) # (?<datasource>.*?):(?<depName>.*?)\\n"
      ],
      "versioningTemplate": "semver"
    }
  ]
}
